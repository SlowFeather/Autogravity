{
    "name": "autogravity",
    "displayName": "Autogravity",
    "description": "Autogravity Automation Plugin for Antigravity",
    "version": "0.0.7",
    "publisher": "autogravity",
    "repository": {
        "type": "git",
        "url": "https://github.com/autogravity/autogravity"
    },
    "engines": {
        "vscode": "^1.80.0"
    },
    "categories": [
        "Other"
    ],
    "activationEvents": [
        "onStartupFinished"
    ],
    "main": "./out/extension.js",
    "contributes": {
        "commands": [
            {
                "command": "autogravity.start",
                "title": "Start Autogravity"
            },
            {
                "command": "autogravity.stop",
                "title": "Stop Autogravity"
            },
            {
                "command": "autogravity.toggleAutoAccept",
                "title": "Toggle Auto Accept"
            }
        ],
        "configuration": {
            "title": "Autogravity",
            "properties": {
                "autogravity.serverPort": {
                    "type": "number",
                    "default": 3000,
                    "description": "Port for the remote control server."
                },
                "autogravity.debuggingPort": {
                    "type": "number",
                    "default": 9222,
                    "description": "VSCode Remote Debugging Port (--remote-debugging-port)"
                }
            }
        }
    },
    "scripts": {
        "vscode:prepublish": "npm run compile",
        "compile": "tsc -p ./",
        "watch": "tsc -watch -p ./",
        "pretest": "npm run compile && npm run lint",
        "test": "node ./out/test/runTest.js"
    },
    "dependencies": {
        "chrome-remote-interface": "^0.33.0",
        "express": "^4.19.0",
        "socket.io": "^4.7.5"
    },
    "devDependencies": {
        "@types/chrome-remote-interface": "^0.33.0",
        "@types/express": "^4.17.21",
        "@types/node": "^18.19.0",
        "@types/vscode": "^1.80.0",
        "typescript": "^5.3.3"
    }
}